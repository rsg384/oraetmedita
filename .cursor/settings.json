{
  "cursor.deploy.repository": "https://github.com/rsg384/oraetmedita.git",
  "cursor.deploy.branch": "main",
  "cursor.deploy.script": "./cursor-deploy-automatic.sh",
  "cursor.deploy.autoCommit": true,
  "cursor.deploy.autoPush": true,
  "cursor.deploy.commitMessage": "📝 [AUTO] Deploy automático - {timestamp}",
  "cursor.deploy.preDeployChecks": [
    "Verificar se todos os arquivos estão salvos",
    "Verificar se não há erros no console",
    "Testar funcionalidades principais"
  ],
  "cursor.deploy.postDeployChecks": [
    "Verificar se o push foi bem-sucedido",
    "Testar funcionalidades após deploy",
    "Verificar logs do Supabase"
  ],
  "cursor.deploy.errorHandling": {
    "retryOnFailure": true,
    "maxRetries": 3,
    "notifyOnError": true
  },
  "cursor.deploy.notifications": {
    "onSuccess": "✅ Deploy concluído com sucesso!",
    "onError": "❌ Erro no deploy. Verifique os logs.",
    "onStart": "🚀 Iniciando deploy automático..."
  },
  "cursor.deploy.hooks": {
    "preDeploy": "echo '🚀 Iniciando deploy...'",
    "postDeploy": "echo '✅ Deploy concluído!'"
  },
  "cursor.deploy.environment": {
    "GIT_AUTHOR_NAME": "Rodrigo Silva Goes",
    "GIT_AUTHOR_EMAIL": "rodrigo@oraetmedita.com"
  },
  "cursor.deploy.filePatterns": {
    "include": [
      "*.html",
      "*.js",
      "*.css",
      "*.json",
      "*.md",
      "*.sql"
    ],
    "exclude": [
      "node_modules/**",
      ".git/**",
      "*.log",
      "*.tmp"
    ]
  },
  "cursor.deploy.commitTypes": {
    "feat": "📝 [FEAT]",
    "fix": "🔧 [FIX]",
    "docs": "📚 [DOCS]",
    "style": "🎨 [STYLE]",
    "perf": "⚡ [PERF]",
    "test": "🧪 [TEST]",
    "config": "🔧 [CONFIG]"
  }
} 